<%= hidden_field_tag "dLength", "#{@show_entries}" %>
<table class="datatables" id="dt-faved">
  <thead>
    <tr>
      <th>Company</th>
      <th>Email</th>
      <th>Openings</th>
    </tr>
  </thead>
  <tbody>
    <% @faved.each do |employer| %>
      <tr>
        <td>
          <%= link_to "#{employer.company}",
              {:controller => 'employers',
              :action => 'display',
              :id => "#{employer.id}"} %>
        </td>
        <td><%= mail_to employer.email %></td>
        <td>
          <span class="badge
            <%= (employer.openings_count > 0 ? 'badge-info' : 'badge') %>
          ">
            <%= employer.openings_count %>
          </span>
        </td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <th class="foot-filter">Company filter</th>
      <th class="foot-filter">Email filter</th>
    </tr>
  </tfoot>
</table>
